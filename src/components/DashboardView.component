<style>
    #dashboard {
        overflow:hidden;
        margin: 20px 0 0 0;
        min-height: 560px;
    }

    .desktop .dashboardView {
        opacity:0;
    }

    .dashboardView {
        position: relative;
        margin-top: 10px;
        overflow-y:hidden;
        overflow-x:hidden;
    }

    .dashboardView .charts {
        transform-origin: 0 0 0;
        -ms-transform-origin: 0 0;
        -webkit-transform-origin: 0 0 0;
    }

    .dashboardView.animate .charts {
        transition: all 0.25s ease-in-out;
    }

    .dashboardView .chartThumb {
        max-width: 250px;
        max-height: 156px;
    }

    .dashboardView .noCharts {
        text-align: center;
        font-size: 15pt;
        margin-top: 50px;
        padding: 10px;
    }

    .dashboardView .miniChartView {
        position: absolute;
    }

</style>

